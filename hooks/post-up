#!/bin/sh
if [ ! -e $HOME/.vim/bundle/Vundle.vim ]; then
    git clone https://github.com/gmarik/vundle.git $HOME/.vim/bundle/Vundle.vim
fi
vim -u $HOME/.vimrc +BundleInstall +qa

RETURN_DIR="$(pwd)"
rm -rf $HOME/.solarized
mkdir $HOME/.solarized
wget --no-check-certificate https://raw.github.com/seebi/dircolors-solarized/master/dircolors.ansi-dark
mv dircolors.ansi-dark $HOME/.solarized/.dircolors
eval `dircolors $HOME/.solarized/.dircolors`
git clone https://github.com/sigurdga/gnome-terminal-colors-solarized.git $HOME/.solarized/scripts
$HOME/.solarized/scripts/set_dark.sh
