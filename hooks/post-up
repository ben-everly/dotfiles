#!/bin/sh
echo "" > ~/.bash/git-completion.bash
curl https://raw.githubusercontent.com/git/git/master/contrib/completion/git-completion.bash > ~/.bash/git-completion.bash

if [ ! -e $HOME/.vim/bundle/Vundle.vim ]; then
    git clone https://github.com/gmarik/vundle.git $HOME/.vim/bundle/Vundle.vim
fi
vim -u $HOME/.vimrc +BundleInstall +qa
